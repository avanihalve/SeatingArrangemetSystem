  <center>
    <h1> Seat Details </h1>
    <div class="card" style="width: 18rem;">

     <div class="card-body">
      <h5 class="card-title"></h5>

      <p class="card-text">

        <strong>Seat Number: </strong><%= @seat.seat_no %><br>
        
        <strong>Name: </strong><%= @seat.employee.fname if @seat.employee.present? %>
        <%= @seat.employee.lname if @seat.employee.present? %><br>
        <strong>Office_id: </strong><%= @seat.employee.office_id if @seat.employee.present? %><br>
        <strong>Email: </strong><%= @seat.employee.email if @seat.employee.present? %><br>
      </p>

      <% if current_user.admin == true %>

      <%= link_to "Edit", edit_seat_path(@seat), :class => "btn btn-warning" %> &nbsp; &nbsp;

      <% end %>

      <%= link_to "Back", seats_path, :class => "btn btn-primary" %> &nbsp;

    </div>
  </div>
<br>
  <div class="card" style="width: 18rem;">

     <div class="card-body">
      <h5 class="card-title"></h5>

      <p class="card-text">
<% if @seat.employee.present? %>
<span style='font-size:50px;'>&#128526;</span>     
<% else %>
<span style='font-size:50px;'>&#128512;</span>
  <% if current_user.admin == false %><br>
  <strong>Wanted to apply for this seat..</strong>
 <%= form_with url: seat_apply_mail_path do |form| %>
         Enter Name: <%= text_field_tag :query %><br><br>
         <%= hidden_field_tag :seat_id,  params[:id]%>
         <%= form.submit %>
 <% end %> 
 <% end %> 

<% end %>
</div>
</div>
</center>

