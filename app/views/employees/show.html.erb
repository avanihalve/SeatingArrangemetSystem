<center>
  <div class="card" style="width: 18rem;">
    <p> Profile Photo </p>
    <p> <%= image_tag @employee.avatar, :size => "260x180", class: "rounded-circle " if @employee.avatar.attached? %></p>
    <div class="card-body">
      <h5 class="card-title"><%= @employee.fname %> <%= @employee.lname %></h5>

      <p class="card-text">
        <% unless current_user.admin == false %>
        <%= @employee.email %><br>

        Office ID: <%= @employee.office_id %> <br>

        Contact No: <%= @employee.contact %><br>

        <% end %>

        Seat Number: <%= @seat.seat_no %><br>
      </p>

      <%= link_to "Back", employees_path, :class => "btn btn-primary" %> &nbsp; &nbsp;
      
      <% if current_user.admin == true %>

      <%= link_to "Edit", edit_employee_path(@employee), :class => "btn btn-warning" %> &nbsp; &nbsp;
      <%= link_to "Destroy", employee_path(@employee), data: {
        method: :delete,
        turbo_confirm: "Are you sure?"
      }, :class => "btn btn-danger" %>
      <% end %>

       <% if current_user.admin == false %>

      <% if current_user.email == @employee.email %>
      <%= button_to "Any Query",showall_path(id: params[:id]) %>
      <% end %>
      
      <% end %>

</center>

