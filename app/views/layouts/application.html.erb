<% if user_signed_in? %>
<div>
<form class="form-inline" action="/search" method="GET">
    <div class="container" class="justify-content-right">
    <div class="row height d-flex justify-content-right align-items-right">
          <table>
              <td><input type="/search" class="form-control" placeholder="Search by office ID" aria-label="Search" 
                   name="query" method = "GET" class="form-control form-control"> </td>
              <td><button class="btn btn-secondary col-md-12" type="submit" >Search</button> </td>
          </table>
    </div>
  </div>
